{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "no-console": "error",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "ignorePatterns": ["dist"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
